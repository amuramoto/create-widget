{
  "name": "{{widgetName}}",
  "version": "1.0.0",
  "description": "{{widgetName}}",
  "scripts": {
    "test": "npm run tsc && npm run build",
    "format": "prettier --write .",
    "tsc": "tsc --noEmit -p src",
    "tsc:watch": "concurrently -n widget \"npm run tsc -- --watch --preserveWatchOutput\"",
    "build": "esbuild src/code.tsx --bundle --outfile=dist/code.js",
    "build:production": "npm run build -- --minify",
    "build:watch": "concurrently -n widget \"npm run build -- --watch\"",
    "dev": "concurrently -n tsc,build 'npm:tsc:watch' 'npm:build:watch'"
  },
  "author": "Figma",
  "license": "MIT License",
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "*",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^6.3.0",
    "esbuild": "^0.13.5",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
}
