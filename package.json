{
  "name": "@figma/create-widget",
  "repository": "git@github.com:figma/create-widget.git",
  "version": "1.0.3",
  "description": "Create a widget from figma widget templates",
  "type": "module",
  "bin": {
    "create-widget": "./cli.js"
  },
  "scripts": {
    "format": "prettier --write .",
    "test": "rm -rf test/ && mkdir -p test && cd test && node ../cli.js",
    "test:with-name": "npm run test -- -n Counter",
    "test:with-ui": "npm run test -- -n CounterWithUI -p counter-with-ui-widget --iframe=Y",
    "test:without-ui": "npm run test -- -n CounterNoUI -p counter-no-ui-widget --iframe=N"
  },
  "author": "Figma",
  "license": "MIT License",
  "dependencies": {
    "fs-extra": "^10.0.0",
    "package-json": "^7.0.0",
    "url": "^0.11.0",
    "inquirer": "^8.2.0",
    "sade": "^1.7.4",
    "globby": "^12.0.2",
    "is-utf8": "^0.2.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "prettier": "^2.5.1"
  }
}
